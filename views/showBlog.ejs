<% include partials/header %>
<div class="ui container main segment">
    <div class="ui header huge"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
                <img src="<%= blog.image %>" class="ui centered rounded image">
                <div class="content">
                        <p><%= blog.created.toDateString() %></p>
                </div>
                <div class="description">
                     <p><%= blog.body %></p>
                </div>
                <a class="ui blue basic button" href="/blogs/<%= blog._id%>/edit">Edit</a>
                <form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
                    <button class="ui red basic button">Delete</button>
                </form>
        </div>

    </div>
    
           
    <div >

    </div>
</div>

<% include partials/footer %>